<div class="container">
    <h1>Create Service</h1>
    <span id="span-message" class="custom-badge d-none"></span>
    <a href="/add-service" class="btn-message light d-none">Add more services</a>
    <a href="/" class="btn-message dark d-none">Done</a>
</div>
<div class="section container">
    <div class="row">
        <form id="form-add-service" class="col s12">
            <div class="row card-panel">
              <div class="input-filed col s6 mb-20">
                <label for="title">Service Title:</label>
                <input name="title" type="text" placeholder="service title" class="validate" required>
              </div>
              <div class="input-filed col s12 mb-20">
                <label for="description">Description:</label>
                <input name="description" type="text" placeholder="Describe your service">
              </div>
              <div class="input-filed col s12 mb-20">
                <label for="phone">Phone #:</label>
                <input name="phone" type="text" placeholder="eg. 00443445446">
              </div>
               <div class="input-filed col s6 mb-20">
                <label for="year-o-ex">Years of Experience:</label>
                <input name="year-o-ex" type="number" placeholder="minimum 1 year" min="1">
              </div>
              <div class="col s12 mb-20">
              <p>
              <label for="">Service Type:</label>
              <label>
                <input name="service-type" value="product" type="radio" checked />
                <span>Product</span>
              </label>
              <label>
                <input name="service-type" value="service" type="radio"/>
                <span>Service</span>
              </label>
              </p>
              </div>
               <div class="col s12 mb-20">
                    <button class="btn" type="submit">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>
