 
 <div class="container">
 <h3>All customers</h3>
    
  <table class="centered">
        <thead>
          <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
          </tr>
        </thead>
        <tbody>
          {{#if customers}}
            {{#each customers as |customer|}}
            {{>customer-info customer}}
            {{/each}}
            {{else}}
            <tr>
                <td colspan="3"><h3>No customer added yet.</h3></td>
            </tr>
            {{/if}}
         </tbody>
    </table>
</div>