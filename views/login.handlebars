<div class="container">
      <h1>Log In</h1>
</div>
<div class="section container">
      {{#if message}}
          <span id="span-message" class="custom-badge red">{{message}}</span>
      {{/if}}
      <span id="span-message" class="custom-badge d-none"></span>
      <div class="row">
        <form id="form-login" class="col s12">
            <div class="row card-panel">
              <div class="input-filed col s6">
                <label for="email">Email:</label>
                <input name="email" type="text" placeholder="Ingresa tu nombre"  class="validate" required>
              </div>

              <div class="input-filed col s6">
                <label for="password">Password:</label>
                <input name="password" placeholder="Ingresa tu apellido" id="apellido" class="validate" required>
              </div>
              <button class="btn" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>
