<div class="container section">
    <h5>Manage the Ticket</h5>
 
    <div class="row">
        <div class="col s12 m12">
            <div id="{{ticket.id}}" class="card blue-grey darken-1 detail-card">
                <div class="card-content white-text">
                <span class="card-title">{{ticket.title}}</span>
                <p>{{ticket.description}}</p>
                </div>
                <div class="card-action">
                    <span>Phone: {{ticket.phone}}</span>
                    <span>Ticket Type: {{ticket.ticket_type}}</span>
                    <span>Created on: {{ticket.date}}</span>
                    <span>Assigned: {{ticket.assigned}}</span>
                </div>
            </div>
        </div>
    </div>
    <h3 id="span-message" class="custom-badge d-none"></h3>
    <section id="services">
    <h5>Assign to Suitable IT Member</h5>
    <table class="centered">
        <thead>
          <tr>
              <th>Member Name</th>
              <th>Service Title</th>
              <th>Phone</th>
              <th>Service Type</th>
              <th>Years of Experience/Operation</th>
              <th>Action</th>
          </tr>
        </thead>
        <tbody>
            {{#if services}}
            {{#each services as |service|}}
            {{>service-info-assign service}}
            {{/each}}
            {{else}}
            <tr>
                <td colspan="5"><h3>No service available to be assigned</h3></td>
            </tr>
            {{/if}}
          
         </tbody>
    </table>
    </section>
 

</div>